---
import '../styles/global.css';
import { injectAnimationStyles } from '../utils/scrollAnimations';
injectAnimationStyles();
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Kori Café - Revolución del café boliviano</title>
  <script>
    // Inicializa animaciones al cargar
    document.addEventListener('DOMContentLoaded', () => {
      import('../utils/scrollAnimations.js').then(module => {
        module.registerAnimations();
      });
    });
  </script>
</head>
<body class="font-sans bg-kori-light text-kori-dark antialiased">
  <slot />
</body>
</html>
