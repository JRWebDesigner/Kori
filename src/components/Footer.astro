---
const socialLinks = [
  { name: 'Tik Tok', icon: 'tiktok', url: 'https://www.tiktok.com/@kori.caf?_t=ZM-8vQUil65Ox4&_r=1' },
  { name: 'Facebook', icon: 'facebook', url: 'https://facebook.com/koricafe.bo' },
  { name: 'WhatsApp', icon: 'whatsapp', url: 'https://wa.me/59169750178' }
];

const quickLinks = [
  { name: 'Inicio', url: '#hero' },
  { name: 'Nuestra Historia', url: '#history' },
  { name: 'Productos', url: '#products' },
  { name: 'Recetas', url: '#recipes' },
  { name: 'Contacto', url: '#contact' }
];

const contactInfo = [
  { icon: 'envelope', text: 'koricafe@gmail.com' },
  { icon: 'phone', text: '+591 69750178' },
  { icon: 'map-marker-alt', text: 'Coripata, Yungas, Bolivia' }
];
---

<footer class="bg-kori-dark text-white pt-16 pb-8">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <!-- Columna 1: Logo y descripción -->
      <div class="md:col-span-1">
        <div class="flex items-center mb-6">
          <img src='./favicon.png' class="w-22 h-14 flex items-center justify-center" />
         
        </div>
        <p class="text-kori-beige mb-6">Café boliviano con identidad, cultivado con pasión en los Yungas.</p>
        
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-kori-brown transition-colors"
              aria-label={social.name}
            >
              <svg class="w-5 h-5">
                <use href={`/icons/social-icons.svg#${social.icon}`} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Columna 2: Enlaces rápidos -->
      <div>
        <h3 class="text-xl font-bold mb-6 text-kori-beige">Enlaces Rápidos</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.url} 
                class="hover:text-kori-brown transition-colors flex items-center"
              >
                <svg class="w-4 h-4 mr-2 text-kori-brown">
                  <use href="/icons/arrow-right.svg#icon" />
                </svg>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Columna 3: Información de contacto -->
      <div>
        <h3 class="text-xl font-bold mb-6 text-kori-beige">Contacto</h3>
        <ul class="space-y-4">
          {contactInfo.map((item) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 mt-0.5 mr-3 text-kori-brown flex-shrink-0">
                <use href={`/icons/contact-icons.svg#${item.icon}`} />
              </svg>
              <span class="text-kori-beige">{item.text}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Columna 4: Newsletter -->
      <div>
        <h3 class="text-xl font-bold mb-6 text-kori-beige">Newsletter</h3>
        <p class="text-kori-beige mb-4">Suscríbete para recibir novedades y ofertas especiales.</p>
        <form class="flex flex-col space-y-3">
          <input 
            type="email" 
            placeholder="Tu correo electrónico" 
            class="px-4 py-2 rounded bg-white/10 border border-white/20 focus:outline-none focus:ring-2 focus:ring-kori-brown"
            required
          />
          <button 
            type="submit" 
            class="px-4 py-2 bg-kori-brown text-white rounded hover:bg-kori-dark transition-colors"
          >
            Suscribirse
          </button>
        </form>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-white/20 my-8"></div>

    <!-- Copyright -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <p class="text-kori-beige text-sm mb-4 md:mb-0">
        © {new Date().getFullYear()} Kori Café. Todos los derechos reservados.
      </p>
      <div class="flex space-x-6">
        <a href="#" class="text-kori-beige hover:text-white text-sm">Términos de servicio</a>
        <a href="#" class="text-kori-beige hover:text-white text-sm">Política de privacidad</a>
      </div>
    </div>
  </div>
</footer>

