---
import { registerAnimations } from '../utils/scrollAnimations';
---

<section id="hero" class="relative h-screen flex items-center justify-center bg-gray-900 overflow-hidden">
  <!-- Imagen de fondo con overlay -->
  <div class="absolute inset-0">
    <img 
      src="/images/banner.jpg" 
      alt="Cafetales en Coripata, Yungas"
      class="w-full h-full object-cover object-center"
      loading="eager"
    />
    <div class="absolute inset-0 bg-kori-dark/60"></div>
  </div>

  <!-- Contenido textual fiel al original -->
  <div class="relative z-10 container mx-auto px-6 text-center">
    <h1 
      class="text-4xl md:text-5xl font-bold text-white mb-4"
      data-scroll
      data-animate="fadeInUp"
    >
      Café boliviano con identidad
    </h1>

    <p 
      class="text-xl text-kori-beige mb-8 max-w-2xl mx-auto"
      data-scroll
      data-animate="fadeInUp"
      data-delay="0.2"
    >
      Descubre un café práctico, con historia y sabor, directo desde Coripata, Yungas
    </p>

    <!-- Botones con animación escalonada -->
    <div 
      class="flex flex-col sm:flex-row gap-4 justify-center"
      data-scroll
      data-animate="fadeInUp"
      data-delay="0.4"
    >
      <a 
        href="#productos" 
        class="btn-primary"
      >
        Nuestro Café
      </a>
      <a 
        href="#recetas" 
        class="btn-secondary"
      >
        Descubre Recetas
      </a>
    </div>
  </div>

  <!-- Indicador de scroll animado -->
  <a 
    href="#historia" 
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2"
    data-scroll
    data-animate="fadeIn"
    data-delay="0.8"
  >
    <div class="animate-bounce w-10 h-10 rounded-full border-2 border-kori-beige flex items-center justify-center">
      <svg class="w-6 h-6 text-kori-beige" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </a>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      registerAnimations();
    });
  </script>
</section>

<style>
  /* Efectos de transición */
  .btn-primary {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .btn-secondary {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Ajuste de overlay para mejor legibilidad */
  @media (max-width: 640px) {
    #hero .absolute.inset-0 > div {
      background-color: rgba(51, 51, 51, 0.7);
    }
  }
</style>
